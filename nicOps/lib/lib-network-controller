#!/bin/bash

function make_network_controller1()
{
    EX_ADDR=$1
    EX_GW_ADDR=$2
    MGMT_ADDR=$3
    STORAGE_ADDR=$4
    VXLAN_ADDR=$5
    REPLICA_ADDR=$6
    VLAN_ADDR=$7
    LBAAS_ADDR=$8
    IPOIB_ADDR=$9
    NODE=${10}

    NET_STR="# CONTROLLER $NODE : generated by devstack
#
# This file is generated from information provided by the datasource.  Changes
# to it will not persist across an instance reboot.  To disable cloud-init's
# network configuration capabilities, write a file
# /etc/cloud/cloud.cfg.d/99-disable-network-config.cfg with the following:
# network: {config: disabled}
network:
    ethernets:
        eno1:
            addresses:
            - $controller1/24
            nameservers:
                addresses:
                - 10.2.0.12
                search:
                - maas
            mtu: 1500
        eno2: {}
        eno3: {}
        eno4: {}
        enp129s0f0: {}
        enp129s0f1: {}
        ibp3s0: 
            addresses: [${STORAGE_ADDR}]
        br-ovs-vp0: {}
        br-ovs-vp1: {}
        br-ovs-vp2: {}
    bonds:
        bond0:
            interfaces:
                - enp129s0f0
                - enp129s0f1
            parameters:
                mode: 802.3ad
                mii-monitor-interval: 1
    vlans:
        vlan3:
            id: 3
            link: eno2
        vlan101:
            id: 101
            link: bond0
        vlan102:
            id: 102
            link: bond0
        vlan103:
            id: 103
            link: bond0
    bridges:
        br-public:
            interfaces: [eno2, br-ovs-vp0]
            addresses: [${EX_ADDR}]
            gateway4: ${EX_GW_ADDR}
            nameservers:
                addresses: [8.8.8.8]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-mgmt:
            interfaces: [${VLAN_MGMT}]
            addresses: [${MGMT_ADDR}]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
        br-ipmi:
            interfaces: [vlan3]
            addresses: [10.3.1.101/24]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-vxlan:
            interfaces: [${VLAN_VXLAN}]
            addresses: [${VXLAN_ADDR}]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
        br-vlan:
            interfaces: [bond0, br-ovs-vp1]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
        br-lbaas:
            interfaces: [${VLAN_LBAAS}, br-ovs-vp2]
            addresses: [${LBAAS_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-baremetal:
            interfaces: [eno4]
            addresses: [10.20.3.11/24]
            mtu: 1500
            dhcp4: no
            dhcp6: no
    version: 2
    "

    #echo "#-------------------------------------------------------------------"
    #echo "$NET_STR"

    cat << EOF > output/$NODE.net.conf
$NET_STR
EOF

}


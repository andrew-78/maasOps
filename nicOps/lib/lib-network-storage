#!/bin/bash

function make_network_storage1()
{
    EX_ADDR=$1
    EX_GW_ADDR=$2
    MGMT_ADDR=$3
    STORAGE_ADDR=$4
    VXLAN_ADDR=$5
    REPLICA_ADDR=$6
    VLAN_ADDR=$7
    LBAAS_ADDR=$8
    IPOIB_ADDR=$9
    NODE=${10}
    NET_STR="# STORAGE $NODE : generated by devstack
#
# This file is generated from information provided by the datasource.  Changes
# to it will not persist across an instance reboot.  To disable cloud-init's
# network configuration capabilities, write a file
# /etc/cloud/cloud.cfg.d/99-disable-network-config.cfg with the following:
# network: {config: disabled}
network:
    ethernets:
        eno1:
            addresses:
            - $storage1/24
            mtu: 1500
            nameservers:
                addresses:
                - 10.2.0.12
                search:
                - maas
        eno2: {}
        eno3: {}
        eno4: {}
        enp3s0f0: {}
        enp3s0f1: {}
        enp4s0f0: {}
        enp4s0f1: {}

    bonds:
        bond0:
            interfaces:
                - enp3s0f0
                - enp3s0f1
                - enp4s0f0
                - enp4s0f1
            parameters:
                mode: 802.3ad
                mii-monitor-interval: 1
    vlans:
        vlan101:
            id: 101
            link: bond0
        vlan102:
            id: 102
            link: bond0
        vlan103:
            id: 103
            link: bond0
        vlan104:
            id: 104
            link: bond0
    bridges:
        br-ex:
            interfaces: [eno2]
            addresses: [${EX_ADDR}]
            nameservers:
                addresses: [8.8.8.8]
            routes:
                - to: 0.0.0.0/0
                  via: ${EX_GW_ADDR}
                  metric: 10
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-mgmt:
            interfaces: [${VLAN_MGMT}]
            addresses: [${MGMT_ADDR}]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
        br-storage:
            interfaces: [${VLAN_STORAGE}]
            addresses: [${STORAGE_ADDR}]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
        br-replica:
            interfaces: [${VLAN_REPLICA}]
            addresses: [${REPLICA_ADDR}]
            mtu: ${FIBER_MTU}
            dhcp4: no
            dhcp6: no
    version: 2
    "
    cat << EOF > output/$NODE.net.conf
$NET_STR
EOF
}


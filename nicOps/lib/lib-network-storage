#!/bin/bash

function make_network_storage1()
{
    EX_ADDR=$1
    EX_GW_ADDR=$2
    MGMT_ADDR=$3
    STORAGE_ADDR=$4
    VXLAN_ADDR=$5
    REPLICA_ADDR=$6
    VLAN_ADDR=$7
    NODE=$8
    NET_STR="# STORAGE $NODE : generated by devstack
#
# This file is generated from information provided by the datasource.  Changes
# to it will not persist across an instance reboot.  To disable cloud-init's
# network configuration capabilities, write a file
# /etc/cloud/cloud.cfg.d/99-disable-network-config.cfg with the following:
# network: {config: disabled}
network:
    ethernets:
        eno1:
            addresses:
            - 10.2.0.229/24
            match:
                macaddress: 24:6e:96:17:0b:78
            mtu: 1500
            nameservers:
                addresses:
                - 10.2.0.12
                search:
                - maas
            set-name: eno1
        eno2:
            match:
                macaddress: 24:6e:96:17:0b:79
            mtu: 1500
            set-name: eno2
        eno3:
            match:
                macaddress: 24:6e:96:17:0b:7a
            mtu: 1500
            optional: true
            set-name: eno3
        eno4:
            match:
                macaddress: 24:6e:96:17:0b:7b
            mtu: 1500
            optional: true
            set-name: eno4
        enp4s0f0:
            match:
                macaddress: a0:36:9f:c2:ab:90
            mtu: 1500
            set-name: enp4s0f0
        enp4s0f1:
            match:
                macaddress: a0:36:9f:c2:ab:92
            mtu: 1500
            set-name: enp4s0f1
        ibp3s0: {}
    bonds:
        bond0:
            interfaces:
                - enp4s0f0
                - enp4s0f1
            parameters:
                mode: 802.3ad
                mii-monitor-interval: 1
    vlans:
        vlan101:
            id: 101
            link: bond0
        vlan102:
            id: 102
            link: bond0
        vlan103:
            id: 103
            link: bond0
    bridges:
        br-ex:
            interfaces: [eno2]
            addresses: [${EX_ADDR}]
            nameservers:
                addresses: [8.8.8.8]
            routes:
                - to: 0.0.0.0/0
                  via: ${EX_GW_ADDR}
                  metric: 10
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-mgmt:
            interfaces: [${VLAN_MGMT}]
            addresses: [${MGMT_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-storage:
            interfaces: [ibp3s0]
            addresses: [${STORAGE_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-replica:
            interfaces: [${VLAN_REPLICA}]
            addresses: [${REPLICA_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
    version: 2
    "
    cat << EOF > output/$NODE.net.conf
$NET_STR
EOF
}

function make_network_storage2()
{
    EX_ADDR=$1
    EX_GW_ADDR=$2
    MGMT_ADDR=$3
    STORAGE_ADDR=$4
    VXLAN_ADDR=$5
    REPLICA_ADDR=$6
    VLAN_ADDR=$7
    NODE=$8
    NET_STR="# STORAGE $NODE : generated by devstack
#
# This file is generated from information provided by the datasource.  Changes
# to it will not persist across an instance reboot.  To disable cloud-init's
# network configuration capabilities, write a file
# /etc/cloud/cloud.cfg.d/99-disable-network-config.cfg with the following:
# network: {config: disabled}
network:
    ethernets:
        eno1:
            addresses:
            - 10.2.0.231/24
            match:
                macaddress: 24:6e:96:1d:17:a4
            mtu: 1500
            nameservers:
                addresses:
                - 10.2.0.12
                search:
                - maas
            set-name: eno1
        eno2:
            match:
                macaddress: 24:6e:96:1d:17:a5
            mtu: 1500
            set-name: eno2
        eno3:
            match:
                macaddress: 24:6e:96:1d:17:a6
            mtu: 1500
            optional: true
            set-name: eno3
        eno4:
            match:
                macaddress: 24:6e:96:1d:17:a7
            mtu: 1500
            optional: true
            set-name: eno4
        enp4s0f0:
            match:
                macaddress: a0:36:9f:c2:ae:04
            mtu: 1500
            optional: true
            set-name: enp4s0f0
        enp4s0f1:
            match:
                macaddress: a0:36:9f:c2:ae:06
            mtu: 1500
            optional: true
            set-name: enp4s0f1
        ibp3s0f0: {}
        ibp3s0f1: {}
    bonds:
        bond0:
            interfaces:
                - enp4s0f0 
                - enp4s0f1
            parameters:
                mode: 802.3ad
                mii-monitor-interval: 1
    vlans:
        vlan101:
            id: 101
            link: bond0
        vlan102:
            id: 102
            link: bond0
        vlan103:
            id: 103
            link: bond0
    bridges:
        br-ex:
            interfaces: [eno2]
            addresses: [${EX_ADDR}]
            nameservers:
                addresses: [8.8.8.8]
            routes:
                - to: 0.0.0.0/0
                  via: ${EX_GW_ADDR}
                  metric: 10
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-mgmt:
            interfaces: [${VLAN_MGMT}]
            addresses: [${MGMT_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-storage:
            interfaces: [ibp3s0f0]
            addresses: [${STORAGE_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
        br-replica:
            interfaces: [${VLAN_REPLICA}]
            addresses: [${REPLICA_ADDR}]
            mtu: 1500
            dhcp4: no
            dhcp6: no
    version: 2
    "
    cat << EOF > output/$NODE.net.conf
$NET_STR
EOF
}

